.action
    &__slider 
        position relative
        width 100%
        &-inner
            display flex
            align-items stretch
            margin-top 100px
            margin-left -24px
            margin-right -24px
        &-box
            width calc(100%/2 - 48px)
            margin 0 24px
            background-color default-cherry
            padding-top 70px
            color white
            .swiper-wrapper
                align-items center
        &-title
            display block
            text-align center
            font-size 36px
            margin-bottom 60px
        &-slide 
            max-width:310px
        &-img
            &:before
                content: ''
                display block
                width 100%
                padding-bottom 100%
            img 
                display none
        &-arrow
            position absolute
            top 155px
            width 35px
            height 18px
            background-color transparent
            border none
            padding: 0
            z-index 1
            svg
                width 100%
                height 100%
                path 
                    fill: #ffffff
            &--left
                left 55px
            &--right
                right 55px
                transform rotate(180deg)
        &-head 
            font-size 13px
            font-family defaut
            text-transform uppercase
            font-family default
            text-align center
            margin-top 40px
            margin-bottom 15px
        &-text
            font-family default
            font-size 15px
            line-height 25px
            text-align center
            display block
        &-show
            display flex
            justify-content center
            margin-top 70px








                
            